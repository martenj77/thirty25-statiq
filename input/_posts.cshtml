@inherits StatiqRazorPage<IEnumerable<IDocument>>


<div>    
    @foreach (var post in Model)
    {
        <div class="mb-4 lg:mb-8 pb-4 lg:pb-8 border-b border-blue-100">
            <div class="flex flex-col md:flex-row md:flex-wrap md:items-center">
                <h3 class="md:w-3/4 md:order-2 md:mb-2" ><a class="text-blue-900 hover:text-blue-600 font-medium text-xl md:text-3xl" href="@Context.GetLink(post)">@post.GetString("Title")</a></h3>
                <time class="mb-2 md:mb-0 text-xs md:text-sm md:w-1/4 md:order-1">
                    @post.GetDateTime("date").ToString("yyyy MMM dd")
                </time>
                <article class="md:w-3/4 md:order-3 md:self-end md:ml-auto">
                    <p class="mb-2">@post.GetString("Description")</p>
                    <div>
                        @Html.Partial("_taglist.cshtml", @post.GetList<string>("tags"))
                    </div>
                </article>    
            </div>
        </div>
    }
</div>

<div class="bg-gray-50">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
    <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
      <span class="block">Check out some stats?</span>
      <span class="block text-indigo-600">Check my Lighthouse!</span>
    </h2>
    <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
      <div class="inline-flex rounded-md shadow">
        <a href="https://speedlify.more10.eu/more10" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
          Go!
        </a>
      </div>
      <div class="ml-3 inline-flex rounded-md shadow">
        <a href="https://speedlify.com" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50">
          What?
        </a>
      </div>
    </div>
  </div>
</div>

