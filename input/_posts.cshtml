@inherits StatiqRazorPage<IEnumerable<IDocument>>


<div>    
    @foreach (var post in Model)
    {
      
                  
        <div class="mb-4 lg:mb-8 pb-4 lg:pb-8 border-b border-blue-100">
            <div class="flex flex-col md:flex-row md:flex-wrap md:items-center">
                <h3 class="md:w-3/4 md:order-2 md:mb-2" ><a class="text-blue-900 hover:text-blue-600 font-sans font-bold text-3xl lg:font-extrabold lg:text-4xl leading-snug mb-2 lg:mb-4" href="@Context.GetLink(post)">@post.GetString("Title")</a></h3>
                <time class="mb-2 md:mb-0 text-xs md:text-sm md:w-1/4 md:order-1 font-light">
                    
                    @post.GetDateTime("date").ToString("MMM d")<br>
                    @post.GetDateTime("date").ToString("yyyy")
                </time>
                <article class="md:w-3/4 md:order-3 md:self-end md:ml-auto font-light">
                    <p class="mb-6">@post.GetString("Description")</p>
                    <div>
                        @Html.Partial("_taglist.cshtml", @post.GetList<string>("tags"))
                    </div>
                </article>    
            </div>
        </div>
    }
</div>
